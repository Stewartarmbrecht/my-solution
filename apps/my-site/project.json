{
  "name": "my-site",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/my-site/",
  "projectType": "application",
  "targets": {
    "start": {
      "executor": "@nx/expo:start",
      "dependsOn": [
        "sync-deps"
      ],
      "options": {
        "port": 19003,
        "dev-client": true
      }
    },
    "start-detox": {
      "executor": "@nx/expo:start",
      "dependsOn": [
        "sync-deps"
      ],
      "options": {
        "port": 19004,
        "dev-client": true
      }
    },
    "start-ip": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "sync-deps"
      ],
      "options": {
        "command": "REACT_NATIVE_PACKAGER_HOSTNAME=10.24.1.57 npx nx start my-site"
      }
    },
    "eas-build-dev": {
      "executor": "@nx/expo:build",
      "options": {
        "platform": "all",
        "profile": "development"
      }
    },
    "eas-build-dev-android": {
      "executor": "@nx/expo:build",
      "options": {
        "platform": "android",
        "profile": "development"
      }
    },
    "local-build-dev-android": {
      "executor": "@nx/expo:build",
      "options": {
        "platform": "android",
        "profile": "development",
        "local": true
      }
    },
    "run-android-geny": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "sync-deps",
        {
          "target": "install-debug-geny",
          "projects": "my-site-e2e"
        }
      ],
      "options": {
        "command": "REACT_NATIVE_PACKAGER_HOSTNAME=localhost npx nx start-detox my-site -a"
      }
    },


    "serve-web": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "sync-deps"
      ],
      "options": {
        "command": "npx serve -s dist/apps/my-site -l 5001"
      }
    },
    "set-hostname-localhost": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "sync-deps"
      ],
      "options": {
        "command": "export REACT_NATIVE_PACKAGER_HOSTNAME=localhost"
      }
    },
    "set-hostname-ip": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "sync-deps"
      ],
      "options": {
        "command": "export REACT_NATIVE_PACKAGER_HOSTNAME=10.24.1.57"
      }
    },
    "run-ios": {
      "executor": "@nx/expo:run",
      "dependsOn": [
        "sync-deps"
      ],
      "options": {
        "platform": "ios"
      }
    },
    "connect-host-emulator": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "sync-deps"
      ],
      "options": {
        "command": "adb connect host.docker.internal"
      }
    },
    "eas-build-preview": {
      "executor": "@nx/expo:build",
      "options": {
        "platform": "all",
        "profile": "preview"
      }
    },
    "eas-build-preview-ios": {
      "executor": "@nx/expo:build",
      "options": {
        "platform": "ios",
        "profile": "preview"
      }
    },
    "eas-build": {
      "executor": "@nx/expo:build",
      "options": {}
    },
    "submit": {
      "executor": "@nx/expo:submit",
      "options": {}
    },
    "eas-build-list": {
      "executor": "@nx/expo:build-list",
      "options": {}
    },
    "sync-deps": {
      "executor": "@nx/expo:sync-deps",
      "options": {}
    },
    "prebuild": {
      "executor": "@nx/expo:prebuild",
      "dependsOn": [
        "sync-deps"
      ],
      "options": {}
    },
    "install": {
      "executor": "@nx/expo:install",
      "options": {}
    },
    "update": {
      "executor": "@nx/expo:update",
      "options": {}
    },
    "update-preview": {
      "command": "eas update --branch preview --platform all --auto",
      "options": {
        "cwd": "apps/my-site"
      }
    },
    "update-preview-ios": {
      "command": "eas update --platform ios --branch preview --auto",
      "options": {
        "cwd": "apps/my-site"
      }
    },
    "update-preview-ci": {
      "command": "eas update --branch preview --platform all --auto --non-interactive",
      "options": {
        "cwd": "apps/my-site"
      }
    },
    "export": {
      "executor": "@nx/expo:export",
      "dependsOn": [
        "sync-deps"
      ],
      "options": {
        "platform": "all",
        "outputDir": "dist/apps/my-site"
      },
      "outputs": [
        "{options.outputDir}"
      ]
    },
    "export-web": {
      "executor": "@nx/expo:export",
      "dependsOn": [
        "sync-deps"
      ],
      "options": {
        "platform": "web",
        "bundler": "metro",
        "outputDir": "dist/apps/my-site"
      }
    },

    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/my-site/jest.config.ts"
      }
    },
    "test-coverage": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/my-site/jest.config.ts",
        "coverage": true,
        "cwd": "apps/my-site"
      }
    },
    "test-coverage-ci": {
      "command": "FORCE_COLOR=false npx jest test --no-colors --coverage",
      "options": {
        "cwd": "apps/my-site"
      }
    }
  },
  "tags": []
}
