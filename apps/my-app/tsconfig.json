{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/tsconfig.lib.tsbuildinfo",
    "types": ["node"],
    "baseUrl": "./src",
    "rootDir": "./src",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "test/test-setup.tsx", "dist"],
  "include": [
    "./src/**/*.js", 
    "./src/**/*.jsx", 
    "./src/**/*.ts", 
    "./src/**/*.tsx",
    "./src/**/*.json",
    "./.expo/types/**/*.ts",
    "./expo-env.d.ts"
, "src/index.js"  ]
}
