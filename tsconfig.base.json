{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "module": "esnext",
    "moduleResolution": "node",
    //"noEmit": true,
    "paths": {
      "@my-solution/my-backend": ["libs/my-backend/src/index.ts"],
      "@my-solution/my-shared": ["libs/my-shared/src/index.ts"],
      "@my-solution/my-state": ["libs/my-state/src/index.ts"],
      "@my-solution/my-ui": ["libs/my-ui/src/index.ts"]
    },
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ESNext",
  },
  "exclude": ["node_modules", "tmp"]
}
