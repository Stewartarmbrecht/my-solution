{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    //"declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    //"lib": ["es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    //"noEmit": true,
    "paths": {
      "@my-solution/backend": ["libs/backend/src/index.ts"],
      "@my-solution/shared": ["libs/shared/src/index.ts"],
      "@my-solution/state": ["libs/state/src/index.ts"],
      "@my-solution/features": ["libs/features/src/index.ts"],
      "@my-solution/ui": ["libs/ui/src/index.ts"]
    },
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015",
  },
  "exclude": ["node_modules", "tmp"]
}
