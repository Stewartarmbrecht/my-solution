{
  "extends": "./tsconfig.json",
  "types": ["node", "react"],
  "lib": ["dom", "esnext"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./", // resolve absolute module names from here
    "outDir": "../../dist/out-tsc",
		"types": [
			"node",
      // Added next 2 for tamagui.
			"@nx/react/typings/cssmodule.d.ts",
			"@nx/react/typings/image.d.ts"
		]  
  },
  "exclude": [
    "node_modules/**/*",
    "jest.config.ts",
    "./**/*.test.ts", 
    "./**/*.test.tsx", 
    "test-setup.ts"
  ],
  "include": [
    "./**/*.js", 
    "./**/*.jsx", 
    "./**/*.ts", 
    "./**/*.tsx",
    // Added next two for tamagui.
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
, "theme.ts.skip"  ]
}
