{
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"],
  "types": ["node", "react"],
  "lib": ["dom", "esnext"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./", // resolve absolute module names from here
    "outDir": "dist"
  },
  "exclude": [
    "node_modules/**/*",
    "jest.config.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.test.js",
    "**/*.test.jsx"
  ]
}
